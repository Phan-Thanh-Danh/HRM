@{
      ViewData["Title"] = "Cấp phát tài sản";
      var employees = ViewBag.Employees as IEnumerable<HRM.ViewModels.HR.EmployeeVM>;
      int assetId = ViewBag.AssetId;
}

<div class="container">
      <div class="row justify-content-center">
            <div class="col-md-6">
                  <div class="card shadow">
                        <div class="card-header bg-info text-white">
                              <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> @ViewData["Title"]</h4>
                        </div>
                        <div class="card-body">
                              <form asp-action="Assign">
                                    <input type="hidden" name="assetId" value="@assetId" />

                                    <div class="mb-3">
                                          <label class="form-label">Chọn nhân viên</label>
                                          <select name="employeeId" class="form-select" required>
                                                <option value="">-- Chọn nhân viên --</option>
                                                @if (employees != null)
                                                {
                                                      foreach (var emp in employees)
                                                      {
                                                            <option value="@emp.Id">@emp.FullName (@emp.Id)</option>
                                                      }
                                                }
                                          </select>
                                    </div>

                                    <div class="mb-3">
                                          <label class="form-label">Ghi chú bàn giao</label>
                                          <textarea name="notes" class="form-control" rows="3"
                                                    placeholder="Tình trạng lúc bàn giao..."></textarea>
                                    </div>

                                    <div class="d-flex justify-content-end gap-2">
                                          <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                                          <button type="submit" class="btn btn-primary">Xác nhận bàn giao</button>
                                    </div>
                              </form>
                        </div>
                  </div>
            </div>
      </div>
</div>