@model HRM.ViewModels.HR.EmployeeVM

@{
      ViewData["Title"] = "Xác nhận xóa nhân viên";
}

<div class="container mt-4">
      <div class="row justify-content-center">
            <div class="col-md-6">
                  <div class="card shadow border-0">
                        <div class="card-header bg-danger text-white py-3 text-center">
                              <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Xác nhận xóa</h4>
                        </div>
                        <div class="card-body p-4 text-center">
                              <div class="mb-4">
                                    @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                                    {
                                          <img src="@Model.AvatarUrl" alt="Avatar" class="rounded-circle img-thumbnail mb-3"
                                               style="width: 100px; height: 100px; object-fit: cover;">
                                    }
                                    else
                                    {
                                          <img src="https://via.placeholder.com/100" alt="Avatar"
                                               class="rounded-circle img-thumbnail mb-3">
                                    }
                                    <h5 class="fw-bold">@Model.FullName</h5>
                                    <p class="text-muted">Bạn có chắc chắn muốn xóa nhân viên này khỏi hệ thống?</p>
                                    <p class="text-danger small">Hành động này sẽ thay đổi trạng thái nhân viên thành
                                          "Đã nghỉ việc" hoặc xóa vĩnh viễn tùy cấu hình hệ thống.</p>
                                    </div>

                                    <form asp-action="Delete">
                                          <input type="hidden" asp-for="Id" />
                                          <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                                      <i class="bi bi-x-circle me-1"></i> Hủy bỏ
                                                </a>
                                                <button type="submit" class="btn btn-danger px-4">
                                                      <i class="bi bi-trash me-1"></i> Xác nhận xóa
                                                </button>
                                          </div>
                                    </form>
                              </div>
                        </div>
                  </div>
            </div>
      </div>