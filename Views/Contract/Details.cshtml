@model HRM.ViewModels.HR.ContractVM

@{
      ViewData["Title"] = "Chi tiết hợp đồng";
}

<div class="container container-contract-details mt-4">
      <div class="row justify-content-center">
            <div class="col-md-8">
                  <div class="card shadow-sm border-0">
                        <div
                              class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
                              <h4 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Hợp đồng:
                                    @Model.ContractNumber</h4>
                                    <span class="badge bg-light text-primary px-3">@Model.Status</span>
                              </div>
                              <div class="card-body p-4">
                                    <div class="row mb-4">
                                          <div class="col-12">
                                                <h5 class="text-muted border-bottom pb-2">Thông tin hợp đồng</h5>
                                          </div>
                                    </div>
                                    <dl class="row mb-0">
                                          <dt class="col-sm-4 text-muted">Nhân viên</dt>
                                          <dd class="col-sm-8 fw-bold">@Model.EmployeeName (@Model.EmployeeId)</dd>

                                          <dt class="col-sm-4 text-muted mt-3">Số hợp đồng</dt>
                                          <dd class="col-sm-8 mt-3">@Model.ContractNumber</dd>

                                          <dt class="col-sm-4 text-muted mt-3">Loại hợp đồng</dt>
                                          <dd class="col-sm-8 mt-3">
                                                <span class="badge bg-info text-dark">@Model.Type</span>
                                          </dd>

                                          <dt class="col-sm-4 text-muted mt-3">Lương cơ bản</dt>
                                          <dd class="col-sm-8 mt-3 text-success fw-bold">
                                                @Model.BaseSalary.ToString("N0") VNĐ
                                          </dd>

                                          <dt class="col-sm-4 text-muted mt-3">Ngày bắt đầu</dt>
                                          <dd class="col-sm-8 mt-3">@Model.StartDate.ToString("dd/MM/yyyy")</dd>

                                          <dt class="col-sm-4 text-muted mt-3">Ngày kết thúc</dt>
                                          <dd class="col-sm-8 mt-3">@(Model.EndDate?.ToString("dd/MM/yyyy") ?? "Không thời                      hạn")</dd>

                                          <dt class="col-sm-4 text-muted mt-3">Tệp đính kèm</dt>
                                          <dd class="col-sm-8 mt-3">
                                                @if (!string.IsNullOrEmpty(Model.FilePath))
                                                {
                                                      <a href="@Model.FilePath" target="_blank"
                                                               class="btn btn-outline-primary btn-sm">
                                                            <i class="bi bi-download me-1"></i> Tải xuống hợp đồng
                                                      </a>
                                                }
                                                else
                                                {
                                                      <span class="text-muted italic">Không có tệp đính kèm</span>
                                                }
                                          </dd>

                                          <dt class="col-sm-4 text-muted mt-3">Ghi chú</dt>
                                          <dd class="col-sm-8 mt-3">@(Model.Note ?? "Không có ghi chú")</dd>
                                    </dl>
                              </div>
                              <div class="card-footer bg-light p-3 text-end">
                                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                          <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                          <i class="bi bi-pencil me-1"></i> Chỉnh sửa
                                    </a>
                              </div>
                        </div>
                  </div>
            </div>
      </div>