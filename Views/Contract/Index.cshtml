@model IEnumerable<HRM.ViewModels.HR.ContractVM>

@{
      ViewData["Title"] = "Danh sách Hợp đồng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
      <h1>@ViewData["Title"]</h1>
      <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Tạo hợp đồng mới</a>
</div>

<div class="card shadow-sm">
      <div class="card-body">
            <div class="table-responsive">
                  <table class="table table-hover align-middle">
                        <thead class="table-light">
                              <tr>
                                    <th>Mã HĐ</th>
                                    <th>Nhân viên</th>
                                    <th>Loại HĐ</th>
                                    <th>Ngày bắt đầu</th>
                                    <th>Ngày kết thúc</th>
                                    <th>Lương cơ bản</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                              </tr>
                        </thead>
                        <tbody>
                              @foreach (var item in Model)
                              {
                                    <tr>
                                          <td>@item.ContractNumber</td>
                                          <td>
                                                <div class="fw-bold">@item.EmployeeName</div>
                                          </td>
                                          <td>
                                                @switch (item.Type.ToString())
                                                {
                                                      case "Probation":
                                                            <span class="badge bg-warning text-dark">Thử việc</span>
                                                            ;
                                                            break;
                                                      case "DefiniteTerm":

                                                            <span class="badge bg-info text-dark">Có thời hạn</span>
                                                            ;
                                                            break;
                                                      case "IndefiniteTerm":

                                                            <span class="badge bg-success">Không thời hạn</span>
                                                            ;
                                                            break;
                                                      default:

                                                            <span>@item.Type</span>
                                                            ; break;
                                                }
                                          </td>
                                          <td>@item.StartDate.ToShortDateString()</td>
                                          <td>@(item.EndDate.HasValue ? item.EndDate.Value.ToShortDateString() : "--")</td>
                                          <td>@item.BaseSalary.ToString("N0") VNĐ</td>
                                          <td>
                                                @if (item.Status == HRM.Models.ContractStatus.Active)
                                                {
                                                      <span class="badge bg-success">Hiệu lực</span>
                                                }
                                                else
                                                {
                                                      <span class="badge bg-secondary">Hết hạn</span>
                                                }
                                          </td>
                                          <td>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"
                                                   title="Chi tiết"><i class="bi bi-eye"></i></a>
                                                @if (!string.IsNullOrEmpty(item.FilePath))
                                                {
                                                      <a href="@item.FilePath" target="_blank"
                                                               class="btn btn-sm btn-outline-secondary" title="Xem File"><i
                                                            class="bi bi-file-earmark-pdf"></i></a>
                                                      }
                                                </td>
                                          </tr>
                                    }
                              </tbody>
                        </table>
                  </div>
            </div>
      </div>