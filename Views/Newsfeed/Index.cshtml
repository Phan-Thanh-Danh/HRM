@model IEnumerable<HRM.ViewModels.Social.PostVM>

@{
    ViewData["Title"] = "Newsfeed";
    var currentUserAvatar = "/img/default-avatar.png"; // Mock
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Create Post -->
            <div class="card mb-4">
                <div class="card-body">
                    <form asp-action="CreatePost" method="post">
                        <div class="d-flex mb-3">
                            <img src="@currentUserAvatar" class="rounded-circle me-2" width="40" height="40" alt="Avatar">
                            <textarea name="Content" class="form-control border-0" placeholder="What's on your mind?" rows="2" required></textarea>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary btn-sm rounded-pill px-4">Post</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Feed -->
            @foreach (var post in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex mb-3">
                            <img src="@(post.AuthorAvatar ?? "/img/default-avatar.png")" class="rounded-circle me-2" width="40" height="40" alt="Avatar">
                            <div>
                                <h6 class="fw-bold mb-0">@post.AuthorName</h6>
                                <small class="text-muted">@post.CreatedAt.ToLocalTime().ToString("g")</small>
                            </div>
                        </div>
                        <p class="card-text">@post.Content</p>
                        @if (!string.IsNullOrEmpty(post.ImageUrl))
                        {
                            <img src="@post.ImageUrl" class="img-fluid rounded mb-3" alt="Post Image">
                        }
                        
                        <hr />
                        
                        <!-- Comments -->
                        <div class="comments-section bg-light p-2 rounded">
                            @foreach (var comment in post.Comments)
                            {
                                <div class="d-flex mb-2">
                                    <img src="@(comment.AuthorAvatar ?? "/img/default-avatar.png")" class="rounded-circle me-2" width="30" height="30" alt="Avatar">
                                    <div class="bg-white p-2 rounded w-100">
                                        <div class="d-flex justify-content-between">
                                             <strong class="small">@comment.AuthorName</strong>
                                             <small class="text-muted" style="font-size: 0.7rem">@comment.CreatedAt.ToLocalTime().ToString("g")</small>
                                        </div>
                                        <p class="small mb-0">@comment.Content</p>
                                    </div>
                                </div>
                            }
                            
                            <!-- Add Comment -->
                            <form asp-action="AddComment" method="post" class="d-flex mt-2">
                                <input type="hidden" name="postId" value="@post.Id" />
                                <input name="content" class="form-control form-control-sm me-2 rounded-pill" placeholder="Write a comment..." required />
                                <button type="submit" class="btn btn-sm btn-outline-primary rounded-circle"><i class="bi bi-send"></i> ></button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
