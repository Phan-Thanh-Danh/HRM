<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRM Số</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRM.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HRM Số</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Department"
                               asp-action="Index">Phòng ban</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index">Nhân
                                viên</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Contract" asp-action="Index">Hợp
                                    đồng</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Onboarding"
                                       asp-action="ManageTasks">Tiếp nhận</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Attendance"
                                       asp-action="Index">Chấm công</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="LeaveRequest"
                                       asp-action="Index">Nghỉ phép</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Payroll"
                                       asp-action="Index">Lương</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="recruitmentDropdown"
                                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Tuyển dụng
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="recruitmentDropdown">
                                        <li><a class="dropdown-item" asp-controller="Recruitment" asp-action="Index">Trang tin
                                            tuyển dụng</a></li>
                                            <li>
                                                <hr class="dropdown-divider">
                                            </li>
                                            <li><a class="dropdown-item" asp-controller="Recruitment" asp-action="Manage">Quản lý
                                                tin</a></li>
                                                <li><a class="dropdown-item" asp-controller="Recruitment" asp-action="Kanban">Kanban Hồ
                                                    sơ</a></li>
                                                </ul>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Learning" asp-action="Index">Đào
                                                    tạo</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link text-dark" asp-area="" asp-controller="Asset" asp-action="Index">Tài sản</a>
                                                </li>
                                            </ul>
                                            <partial name="_LoginPartial" />
                                        </div>
                                    </div>
                                </nav>
                            </header>
                            <div class="container">
                                <main role="main" class="pb-3">
                                    @RenderBody()
                                </main>
                            </div>

                            <footer class="border-top footer text-muted">
                                <div class="container">
                                    &copy; 2026 - Digital HRM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách</a>
                                </div>
                            </footer>
                            <script src="~/lib/jquery/dist/jquery.min.js"></script>
                            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
                            <script src="~/js/site.js" asp-append-version="true"></script>
                            @await RenderSectionAsync("Scripts", required: false)
                        </body>

                    </html>