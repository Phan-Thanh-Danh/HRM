@model HRM.ViewModels.Time.LeaveRequestVM

@{
      ViewData["Title"] = "Tạo đơn nghỉ phép";
}

<div class="container">
      <div class="row justify-content-center">
            <div class="col-md-8">
                  <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                              <h4 class="mb-0"><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h4>
                        </div>
                        <div class="card-body">
                              <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="mb-3">
                                          <label asp-for="Type" class="form-label">Loại nghỉ phép</label>
                                          <select asp-for="Type" class="form-select"
                                                  asp-items="Html.GetEnumSelectList<HRM.Models.LeaveType>()"></select>
                                          <span asp-validation-for="Type" class="text-danger"></span>
                                    </div>

                                    <div class="row mb-3">
                                          <div class="col-md-6">
                                                <label asp-for="FromDate" class="form-label">Từ ngày</label>
                                                <input asp-for="FromDate" class="form-control" type="date" />
                                                <span asp-validation-for="FromDate" class="text-danger"></span>
                                          </div>
                                          <div class="col-md-6">
                                                <label asp-for="ToDate" class="form-label">Đến ngày</label>
                                                <input asp-for="ToDate" class="form-control" type="date" />
                                                <span asp-validation-for="ToDate" class="text-danger"></span>
                                          </div>
                                    </div>

                                    <div class="mb-3">
                                          <label asp-for="Reason" class="form-label">Lý do nghỉ</label>
                                          <textarea asp-for="Reason" class="form-control" rows="3"
                                                    placeholder="Nhập lý do nghỉ..."></textarea>
                                          <span asp-validation-for="Reason" class="text-danger"></span>
                                    </div>

                                    <div class="d-flex justify-content-end gap-2">
                                          <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                                          <button type="submit" class="btn btn-primary">Gửi đơn</button>
                                    </div>
                              </form>
                        </div>
                  </div>
            </div>
      </div>
</div>

@section Scripts {
      @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
      }
}