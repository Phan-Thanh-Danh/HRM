@model IEnumerable<HRM.ViewModels.Time.LeaveRequestVM>

@{
      ViewData["Title"] = "Quản lý Đơn nghỉ phép";
}

<div class="d-flex justify-content-between align-items-center mb-4">
      <h1><i class="bi bi-list-check"></i> Duyệt đơn nghỉ phép</h1>
</div>

<div class="card shadow-sm">
      <div class="card-body">
            <div class="table-responsive">
                  <table class="table table-hover align-middle">
                        <thead class="table-light">
                              <tr>
                                    <th>Nhân viên</th>
                                    <th>Loại nghỉ</th>
                                    <th>Thời gian</th>
                                    <th>Số ngày</th>
                                    <th>Lý do</th>
                                    <th>Thao tác</th>
                              </tr>
                        </thead>
                        <tbody>
                              @if (Model != null && Model.Any())
                              {
                                    foreach (var item in Model)
                                    {
                                          <tr>
                                                <td class="fw-bold">@item.EmployeeName</td>
                                                <td>@item.Type</td>
                                                <td>
                                                      @item.FromDate.ToString("dd/MM") - @item.ToDate.ToString("dd/MM/yyyy")
                                                </td>
                                                <td>@item.TotalDays</td>
                                                <td>@item.Reason</td>
                                                <td>
                                                      <div class="d-flex gap-2">
                                                            <form asp-action="Approve" method="post">
                                                                  <input type="hidden" name="id" value="@item.Id" />
                                                                  <button type="submit" class="btn btn-success btn-sm"
                                                                          title="Duyệt">
                                                                        <i class="bi bi-check-lg"></i> Duyệt
                                                                  </button>
                                                            </form>
                                                            <button type="button" class="btn btn-danger btn-sm"
                                                                    data-bs-toggle="modal" data-bs-target="#rejectModal-@item.Id"
                                                                    title="Từ chối">
                                                                  <i class="bi bi-x-lg"></i> Từ chối
                                                            </button>
                                                      </div>

                                                      <!-- Reject Modal -->
                                                      <div class="modal fade" id="rejectModal-@item.Id" tabindex="-1"
                                                                 aria-hidden="true">
                                                            <div class="modal-dialog">
                                                                  <div class="modal-content">
                                                                        <form asp-action="Reject" method="post">
                                                                              <div class="modal-header">
                                                                                    <h5 class="modal-title">Từ chối đơn nghỉ phép
                                                                                    </h5>
                                                                                    <button type="button" class="btn-close"
                                                                                            data-bs-dismiss="modal"
                                                                                            aria-label="Close"></button>
                                                                              </div>
                                                                              <div class="modal-body">
                                                                                    <input type="hidden" name="id"
                                                                                           value="@item.Id" />
                                                                                    <div class="mb-3">
                                                                                          <label class="form-label">Lý do từ
                                                                                                chối</label>
                                                                                                <textarea name="reason"
                                                                                                          class="form-control"
                                                                                                          required></textarea>
                                                                                          </div>
                                                                                    </div>
                                                                                    <div class="modal-footer">
                                                                                          <button type="button" class="btn btn-secondary"
                                                                                                  data-bs-dismiss="modal">Hủy</button>
                                                                                          <button type="submit" class="btn btn-danger">Xác
                                                                                                nhận từ chối</button>
                                                                                          </div>
                                                                                    </form>
                                                                              </div>
                                                                        </div>
                                                                  </div>
                                                            </td>
                                                      </tr>
                                                }
                                          }
                    else
                                          {
                                                <tr>
                                                      <td colspan="6" class="text-center py-4 text-muted">Không có đơn nào cần duyệt.</td>
                                                </tr>
                                          }
                                    </tbody>
                              </table>
                        </div>
                  </div>
            </div>