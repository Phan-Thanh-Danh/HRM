@model HRM.ViewModels.HR.DepartmentVM

@{
      ViewData["Title"] = "Thêm phòng ban mới";
      var parents = ViewBag.ParentDepartments as IEnumerable<HRM.ViewModels.HR.DepartmentVM>;
}

<div class="container">
      <div class="row justify-content-center">
            <div class="col-md-6">
                  <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                              <h4 class="mb-0">@ViewData["Title"]</h4>
                        </div>
                        <div class="card-body">
                              <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="mb-3">
                                          <label asp-for="Name" class="form-label">Tên phòng ban</label>
                                          <input asp-for="Name" class="form-control"
                                                 placeholder="Ví dụ: Phòng Kế toán" />
                                          <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                          <label asp-for="Description" class="form-label">Mô tả</label>
                                          <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                          <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                          <label asp-for="ParentId" class="form-label">Phòng ban cha (nếu có)</label>
                                          <select asp-for="ParentId" class="form-select">
                                                <option value="">-- Không có --</option>
                                                @if (parents != null)
                                                {
                                                      foreach (var dept in parents)
                                                      {
                                                            <option value="@dept.Id">@dept.Name</option>
                                                      }
                                                }
                                          </select>
                                          <span asp-validation-for="ParentId" class="text-danger"></span>
                                    </div>

                                    <div class="d-flex justify-content-end gap-2">
                                          <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                                          <button type="submit" class="btn btn-primary">Lưu phòng ban</button>
                                    </div>
                              </form>
                        </div>
                  </div>
            </div>
      </div>
</div>