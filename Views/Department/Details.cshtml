@model HRM.ViewModels.HR.DepartmentVM

@{
      ViewData["Title"] = "Chi tiết phòng ban";
}

<div class="container mt-4">
      <div class="row">
            <div class="col-md-8 offset-md-2">
                  <div class="card shadow-sm border-0">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
                              <h4 class="mb-0"><i class="bi bi-building me-2"></i>Chi tiết phòng ban: @Model.Name</h4>
                              <span class="badge bg-light text-primary px-3">ID: @Model.Id</span>
                        </div>
                        <div class="card-body p-4">
                              <div class="row mb-4">
                                    <div class="col-12">
                                          <h5 class="text-muted border-bottom pb-2">Thông tin chung</h5>
                                    </div>
                              </div>
                              <dl class="row mb-0">
                                    <dt class="col-sm-4 text-muted">Tên phòng ban</dt>
                                    <dd class="col-sm-8 fw-bold">@Model.Name</dd>

                                    <dt class="col-sm-4 text-muted mt-3">Mô tả</dt>
                                    <dd class="col-sm-8 mt-3">@(Model.Description ?? "Không có mô tả")</dd>

                                    <dt class="col-sm-4 text-muted mt-3">Trưởng phòng</dt>
                                    <dd class="col-sm-8 mt-3">
                                          @if (!string.IsNullOrEmpty(Model.ManagerName))
                                          {
                                                <span class="badge bg-info text-dark">@Model.ManagerName</span>
                                          }
                                          else
                                          {
                                                <span class="text-muted italic">Chưa có trưởng phòng</span>
                                          }
                                    </dd>

                                    <dt class="col-sm-4 text-muted mt-3">Phòng ban cha</dt>
                                    <dd class="col-sm-8 mt-3">@(Model.ParentName ?? "N/A")</dd>

                                    <dt class="col-sm-4 text-muted mt-3">Số lượng nhân viên</dt>
                                    <dd class="col-sm-8 mt-3">
                                          <span class="badge bg-secondary">@Model.EmployeeCount nhân viên</span>
                                    </dd>

                                    <dt class="col-sm-4 text-muted mt-3">Ngày tạo</dt>
                                    <dd class="col-sm-8 mt-3">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                              </dl>
                        </div>
                        <div class="card-footer bg-light p-3 text-end">
                              <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                    <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
                              </a>
                              <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil me-1"></i> Chỉnh sửa
                              </a>
                        </div>
                  </div>
            </div>
      </div>
</div>
