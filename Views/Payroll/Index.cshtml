@model IEnumerable<HRM.ViewModels.Salary.PayrollPeriodVM>

@{
      ViewData["Title"] = "Kỳ tính lương";
}

<div class="d-flex justify-content-between align-items-center mb-4">
      <h1><i class="bi bi-cash-coin"></i> Quản lý @ViewData["Title"]</h1>
      <div class="d-flex gap-2">
            <a asp-action="Formulas" class="btn btn-outline-secondary"><i class="bi bi-calculator"></i> Cấu hình công
                  thức</a>
                  <a asp-action="CreatePeriod" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Tạo kỳ lương mới</a>
            </div>
      </div>

      <div class="card shadow-sm">
            <div class="card-body">
                  <table class="table table-hover align-middle">
                        <thead class="table-light">
                              <tr>
                                    <th>Tên kỳ lương</th>
                                    <th>Tháng</th>
                                    <th>Năm</th>
                                    <th>Ngày bắt đầu</th>
                                    <th>Ngày kết thúc</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                              </tr>
                        </thead>
                        <tbody>
                              @foreach (var item in Model)
                              {
                                    <tr>
                                          <td class="fw-bold">@item.Name</td>
                                          <td>@item.Month</td>
                                          <td>@item.Year</td>
                                          <td>@item.FromDate.ToString("dd/MM/yyyy")</td>
                                          <td>@item.ToDate.ToString("dd/MM/yyyy")</td>
                                          <td>
                                                @if (item.Status == HRM.Models.PayrollStatus.Locked || item.Status ==
                                                                                    HRM.Models.PayrollStatus.Paid)
                                                {
                                                      <span class="badge bg-secondary"><i class="bi bi-lock-fill"></i> Đã chốt</span>
                                                }
                                                else
                                                {
                                                      <span class="badge bg-success"><i class="bi bi-unlock-fill"></i> Đang mở</span>
                                                }
                                          </td>
                                          <td>
                                                @if (item.Status == HRM.Models.PayrollStatus.Open)
                                                {
                                                      <a asp-action="Run" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1"
                                                               title="Tính lương">
                                                            <i class="bi bi-play-fill"></i> Tính lương
                                                      </a>
                                                }
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"
                                                         title="Chi tiết">
                                                      <i class="bi bi-list-ul"></i> Chi tiết
                                                </a>
                                          </td>
                                    </tr>
                              }
                        </tbody>
                  </table>
            </div>
      </div>