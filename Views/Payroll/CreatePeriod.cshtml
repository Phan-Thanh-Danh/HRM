@model HRM.ViewModels.Salary.PayrollPeriodVM

@{
      ViewData["Title"] = "Tạo kỳ lương mới";
}

<div class="container">
      <div class="row justify-content-center">
            <div class="col-md-6">
                  <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                              <h4 class="mb-0">@ViewData["Title"]</h4>
                        </div>
                        <div class="card-body">
                              <form asp-action="CreatePeriod">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="mb-3">
                                          <label asp-for="Name" class="form-label">Tên kỳ lương</label>
                                          <input asp-for="Name" class="form-control"
                                                 placeholder="Ví dụ: Lương tháng 10/2026" />
                                          <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <div class="row mb-3">
                                          <div class="col-md-6">
                                                <label asp-for="Month" class="form-label">Tháng</label>
                                                <input asp-for="Month" class="form-control" type="number" min="1"
                                                       max="12" value="@DateTime.Now.Month" />
                                                <span asp-validation-for="Month" class="text-danger"></span>
                                          </div>
                                          <div class="col-md-6">
                                                <label asp-for="Year" class="form-label">Năm</label>
                                                <input asp-for="Year" class="form-control" type="number"
                                                       value="@DateTime.Now.Year" />
                                                <span asp-validation-for="Year" class="text-danger"></span>
                                          </div>
                                    </div>

                                    <div class="row mb-3">
                                          <div class="col-md-6">
                                                <label asp-for="FromDate" class="form-label">Ngày bắt đầu</label>
                                                <input asp-for="FromDate" class="form-control" type="date" />
                                                <span asp-validation-for="FromDate" class="text-danger"></span>
                                          </div>
                                          <div class="col-md-6">
                                                <label asp-for="ToDate" class="form-label">Ngày kết thúc</label>
                                                <input asp-for="ToDate" class="form-control" type="date" />
                                                <span asp-validation-for="ToDate" class="text-danger"></span>
                                          </div>
                                    </div>

                                    <div class="d-flex justify-content-end gap-2">
                                          <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                                          <button type="submit" class="btn btn-primary">Tạo mới</button>
                                    </div>
                              </form>
                        </div>
                  </div>
            </div>
      </div>
</div>